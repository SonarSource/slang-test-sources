<?xml version="1.0" encoding="utf-8"?>
<!-- an all powerful policy file -->
<restrict>
    <http>
        <method>post</method>
        <method>get</method>
    </http>

    <commands>
        <command>read</command>
        <command>write</command>
        <command>exec</command>
        <command>list</command>
        <command>search</command>
        <command>version</command>
    </commands>
</restrict>
